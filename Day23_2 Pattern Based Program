/*
  Pattern Based Program

  in this we will use nested for loops

     *
     * *
     * * *
     * * * *
 */

  class StarPattern1
  {
      public static void main(String args[])
      {
      	for(int i=1;i<=4;i++)
      	{
      		for(int j=1; j<=i; j++)
      		{
      			System.out.print("*");
      		}
      		System.out.println();
      	}
      }
  }
