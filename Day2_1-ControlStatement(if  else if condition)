/*
  IF ELSE IF
  Use the else if statement to specify a new condition if the first condition is false.
  if else if syntax:

    if(condition1)        if condition1 is true then it will bypass other conditions and it will give output.
    {                     if condition1 is false then it goes to condition2 and it will check condition is true or false if it's true it will print output otherwise it goes
       //body             next condition like this only procees will be run hence we get the true condition. 

    }
      else if(condition2)
      {
        //body
      }
        else
        {
           //body
        }
        */
          class Day2Challenge1
          {
             public static void main(String args[])
             {
               int a=22;
               int b=39;
               int c=33;
                  if(a>b)
                  {
                    if(a>c)
                    {
                       System.out.println("Moudak");
                    }
                      else{
                      	System.out.println("mirchi");
                      }
                  }
                     else if(b>c)
                     {
                     	System.out.println("Thikki Mirch");
                     }
                     else{
                     	System.out.println("Mirchhi");
                     }
             }
          }
